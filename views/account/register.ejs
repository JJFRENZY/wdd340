<%- include('../partials/head.ejs', { title }) %>
<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs', { nav }) %>

<main id="main" class="container" tabindex="-1">
  <h1><%= title %></h1>

  <!-- Flash messages -->
  <div id="messages"><%- messages() %></div>

  <form class="form" action="/account/register" method="post">
    <!-- First name -->
    <div class="form-row">
      <label for="account_firstname">First name</label>
      <input
        id="account_firstname"
        name="account_firstname"
        type="text"
        required
        autocomplete="given-name"
        inputmode="text"
      />
    </div>

    <!-- Last name -->
    <div class="form-row">
      <label for="account_lastname">Last name</label>
      <input
        id="account_lastname"
        name="account_lastname"
        type="text"
        required
        autocomplete="family-name"
        inputmode="text"
      />
    </div>

    <!-- Email -->
    <div class="form-row">
      <label for="account_email">Email</label>
      <input
        id="account_email"
        name="account_email"
        type="email"
        required
        placeholder="you@example.com"
        autocomplete="email"
        inputmode="email"
      />
    </div>

    <!-- Password -->
    <div class="form-row">
      <label for="account_password">Password</label>
      <div class="form-hint">
        Passwords must be at least 12 characters and contain at least 1 number,
        1 capital letter and 1 special character.
      </div>
      <input
        id="account_password"
        name="account_password"
        type="password"
        required
        minlength="12"
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
        title="12+ chars, 1 number, 1 uppercase, 1 special character"
        autocomplete="new-password"
      />
      <button type="button" class="btn outline" id="toggle-register-pass">Show password</button>
    </div>

    <div class="form-row">
      <button class="btn primary" type="submit">Create account</button>
    </div>

    <p>
      Already have an account?
      <a href="/account/login">Log in</a>.
    </p>
  </form>
</main>

<script>
  (function () {
    const input = document.getElementById('account_password');
    const btn = document.getElementById('toggle-register-pass');
    if (input && btn) {
      btn.addEventListener('click', function () {
        const isPwd = input.type === 'password';
        input.type = isPwd ? 'text' : 'password';
        btn.textContent = isPwd ? 'Hide password' : 'Show password';
      });
    }
  })();
</script>

