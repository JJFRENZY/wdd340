<%- include('../partials/head.ejs', { title }) %>
<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs', { nav }) %>

<main id="main" class="container" tabindex="-1">
  <h1><%= title %></h1>

  <!-- Flash messages -->
  <div id="messages"><%- (typeof messages === 'function') ? messages() : '' %></div>

  <!-- Validation errors -->
  <% if (errors && typeof errors.array === 'function' && errors.array().length) { %>
    <ul class="notice" aria-live="polite">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form id="loginForm" class="form" action="/account/login" method="post">
    <div class="form-row">
      <label for="loginEmail">Email</label>
      <input
        type="email"
        id="loginEmail"
        name="account_email"
        required
        autocomplete="email"
        placeholder="you@example.com"
        value="<%= typeof account_email !== 'undefined' ? account_email : '' %>"
      />
    </div>

    <div class="form-row">
      <label for="loginPassword">Password</label>
      <input
        type="password"
        id="loginPassword"
        name="account_password"
        required
        minlength="12"
        autocomplete="current-password"
        pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^A-Za-z0-9]).{12,}"
        aria-describedby="pwReq"
      />
      <p id="pwReq" class="form-hint">
        At least 12 characters with upper &amp; lower case, a number, and a symbol.
      </p>
    </div>

    <button class="btn primary" type="submit">Log In</button>
  </form>

  <p style="margin-top:1rem;">
    Donâ€™t have an account?
    <a href="/account/register">Create one</a>.
  </p>
</main>

<%- include('../partials/footer.ejs') %>
