<%- include('../partials/head.ejs', { title }) %>
<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs', { nav }) %>

<main id="main" class="error container" tabindex="-1">
  <h1>Error <%= title %></h1>

  <p class="error-msg" role="alert" aria-live="assertive"><%= message %></p>

  <p><a class="btn" href="/">‚Üê Go Back Home</a></p>

  <details>
    <summary>Troubleshooting tips</summary>
    <ul>
      <li>Check the URL spelling.</li>
      <li>Return to the home page and navigate again.</li>
      <li>If this keeps happening, contact us.</li>
    </ul>
  </details>

  <% if (typeof err !== 'undefined' && err) { %>
    <details open>
      <summary>Developer details</summary>
      <pre style="white-space: pre-wrap;"><%= err.stack || err.message %></pre>
    </details>
  <% } %>
</main>

