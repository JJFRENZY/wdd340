<!-- views/errors/error.ejs -->
<%- include('../partials/head.ejs', { title: (typeof title !== 'undefined' ? title : 'Error') }) %>
<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>

<main id="main" class="error container" tabindex="-1">
  <h1>Error <%= typeof title !== 'undefined' ? title : '' %></h1>

  <p class="error-msg" role="alert" aria-live="assertive">
    <%= typeof message !== 'undefined' ? message : 'Something went wrong.' %>
  </p>

  <p><a class="btn" href="/">‚Üê Go Back Home</a></p>

  <details>
    <summary>Troubleshooting tips</summary>
    <ul>
      <li>Check the URL spelling.</li>
      <li>Return to the home page and navigate again.</li>
      <li>If this keeps happening, contact us.</li>
    </ul>
  </details>

  <% if (typeof err !== 'undefined' && err) { %>
    <details open>
      <summary>Developer details</summary>
      <pre style="white-space: pre-wrap;"><%= err.stack || err.message || err %></pre>
    </details>
  <% } %>
</main>

<%- include('../partials/footer.ejs') %>
