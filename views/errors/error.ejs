<%- include('../partials/head.ejs', { title }) %>
<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs', { nav }) %>

<main id="main" class="error container" tabindex="-1">
  <h1>Error <%= title %></h1>

  <!-- Announce immediately to assistive tech -->
  <p class="error-msg" role="alert"><%- message %></p>

  <p>
    <a class="btn" href="javascript:history.back()">‚Üê Go Back</a>
    <a class="btn outline" href="/">Home</a>
  </p>

  <!-- Optional tips for users -->
  <details>
    <summary>Troubleshooting tips</summary>
    <ul>
      <li>Check the URL spelling.</li>
      <li>Return to the home page and navigate again.</li>
      <li>If this keeps happening, please contact us.</li>
    </ul>
  </details>

  <!-- Optional: show extra details in dev if provided -->
  <% if (typeof err !== 'undefined' && err && err.stack) { %>
    <details open>
      <summary>Developer details</summary>
      <pre><%= err.stack %></pre>
    </details>
  <% } %>
</main>

<%- include('../partials/footer.ejs') %>
