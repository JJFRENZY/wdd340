<!-- views/partials/head.ejs -->
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1"
  />

  <title><%= title ? (title + " | CSE Motors") : "CSE Motors" %></title>
  <meta name="description" content="CSE Motors â€“ quality vehicles, honest service." />
  <meta name="color-scheme" content="light dark" />
  <meta name="theme-color" content="#0f766e" />

  <% /* Optional canonical if provided: res.render(... { canonical: 'https://example.com/path' }) */ %>
  <% if (typeof canonical === 'string' && canonical) { %>
    <link rel="canonical" href="<%= canonical %>" />
  <% } %>

  <!-- Favicons -->
  <link rel="icon" href="/images/logo.svg" type="image/svg+xml" />
  <link rel="preload" as="image" href="/images/logo.svg" />

  <!-- CSS must include media="screen" per assignment -->
  <link rel="stylesheet" href="/css/styles.css" media="screen" />

  <!-- Allow EJS children to inject extra <head> content if needed -->
  <% if (typeof headExtra !== 'undefined') { %>
    <%- headExtra %>
  <% } %>
</head>
