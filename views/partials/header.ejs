<!-- views/partials/header.ejs -->
<header class="site-header" role="banner">
  <div class="wrap">
    <div class="brand">
      <img class="logo" src="/images/logo.svg" alt="CSE Motors logo" width="48" height="48" />
      <span class="brand-name">CSE Motors</span>
    </div>

    <!-- Secondary header nav: Account -->
    <nav class="account-nav" aria-label="Account">
      <ul>
        <% const hasAcct = typeof accountData !== 'undefined' && accountData; %>
        <% const isLoggedIn = typeof loggedin !== 'undefined' && loggedin && hasAcct; %>
        <% const isStaff = isLoggedIn && (accountData.account_type === 'Employee' || accountData.account_type === 'Admin'); %>

        <% if (isLoggedIn) { %>
          <!-- Logged in: Welcome, Saved, (optional) Inventory, Logout -->
          <li>
            <a href="/account" aria-label="Account management">
              Welcome <strong><%= accountData.account_firstname %></strong>
            </a>
          </li>
          <li><a href="/account/favorites" aria-label="Saved vehicles">Saved</a></li>
          <% if (isStaff) { %>
            <li><a href="/inv" aria-label="Inventory management">Inventory</a></li>
          <% } %>
          <li><a href="/account/logout">Logout</a></li>
        <% } else { %>
          <!-- Logged out: only My Account -->
          <li><a href="/account/login">My Account</a></li>
        <% } %>
      </ul>
    </nav>

    <p class="tagline">Quality vehicles. Honest service.</p>
  </div>
</header>
