<!-- views/partials/nav.ejs -->
<nav class="site-nav" aria-label="Primary">
  <% /* Prefer the server-built HTML string from nav middleware */ %>
  <% if (res.locals.nav && res.locals.nav.trim().length) { %>
    <%- res.locals.nav %>
  <% } else { %>
    <% /* Minimal fallback if DB/query failed */ %>
    <ul>
      <li><a href="/" title="Home page" aria-current="page">Home</a></li>
      <!-- Optionally add a simple Inventory link in the fallback:
      <li><a href="/inv" title="Inventory">Inventory</a></li>
      -->
    </ul>
  <% } %>
</nav>
