<%- include('../partials/head.ejs', { title }) %>
<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs', { nav }) %>

<main id="main" class="container" tabindex="-1">
  <h1><%= title %></h1>

  <div id="messages"><%- messages() %></div>

  <% if (errors) { %>
    <ul class="notice" aria-live="polite">
      <% if (typeof errors.array === 'function') { errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) } %>
    </ul>
  <% } %>

  <!-- Remove novalidate so native HTML validation works by default -->
  <form action="/inv/add-inventory" method="post" class="form" id="addInventoryForm">
    <div class="form-row">
      <label for="classificationList">Classification</label>
      <%- classificationSelect %>
    </div>

    <div class="form-row">
      <label for="inv_make">Make</label>
      <input
        type="text"
        id="inv_make"
        name="inv_make"
        required
        minlength="1"
        autocomplete="off"
        value="<%= locals.inv_make || '' %>"
      >
    </div>

    <div class="form-row">
      <label for="inv_model">Model</label>
      <input
        type="text"
        id="inv_model"
        name="inv_model"
        required
        minlength="1"
        autocomplete="off"
        value="<%= locals.inv_model || '' %>"
      >
    </div>

    <div class="form-row">
      <label for="inv_year">Year</label>
      <input
        type="number"
        id="inv_year"
        name="inv_year"
        required
        min="1886"
        max="<%= new Date().getFullYear() + 1 %>"
        step="1"
        inputmode="numeric"
        value="<%= locals.inv_year || '' %>"
        aria-describedby="yearHelp"
      >
      <small id="yearHelp" class="muted">Enter a 4-digit year (1886â€“<%= new Date().getFullYear() + 1 %>).</small>
    </div>

    <div class="form-row">
      <label for="inv_price">Price (USD)</label>
      <input
        type="number"
        id="inv_price"
        name="inv_price"
        required
        min="0"
        step="0.01"
        inputmode="decimal"
        value="<%= locals.inv_price || '' %>"
      >
    </div>

    <div class="form-row">
      <label for="inv_miles">Mileage</label>
      <input
        type="number"
        id="inv_miles"
        name="inv_miles"
        required
        min="0"
        step="1"
        inputmode="numeric"
        value="<%= locals.inv_miles || '' %>"
      >
    </div>

    <div class="form-row">
      <label for="inv_color">Color</label>
      <input
        type="text"
        id="inv_color"
        name="inv_color"
        required
        autocomplete="off"
        value="<%= locals.inv_color || '' %>"
      >
    </div>

    <div class="form-row">
      <label for="inv_image">Image Path</label>
      <input
        type="text"
        id="inv_image"
        name="inv_image"
        required
        value="<%= locals.inv_image || '/images/vehicles/no-image.png' %>"
        placeholder="/images/vehicles/no-image.png"
      >
      <small class="muted">Use a path within <code>/images/vehicles/</code>.</small>
    </div>

    <div class="form-row">
      <label for="inv_thumbnail">Thumbnail Path</label>
      <input
        type="text"
        id="inv_thumbnail"
        name="inv_thumbnail"
        required
        value="<%= locals.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>"
        placeholder="/images/vehicles/no-image-tn.png"
      >
      <small class="muted">Use a path within <code>/images/vehicles/</code>.</small>
    </div>

    <div class="form-row">
      <label for="inv_description">Description</label>
      <textarea
        id="inv_description"
        name="inv_description"
        rows="4"
        required
      ><%= (locals.inv_description || '') %></textarea>
    </div>

    <button class="btn primary" type="submit">Add Vehicle</button>
    <a class="btn outline" href="/inv">Cancel</a>
  </form>
</main>

<%- include('../partials/footer.ejs') %>
