<%- include('../partials/head.ejs', { title }) %>
<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs', { nav }) %>

<main id="main" class="container inventory classification" tabindex="-1">
  <!-- Page heading -->
  <h1><%= title || 'Vehicles' %></h1>

  <!-- Flash/messages (guarded so it can’t 500 if messages() isn’t set) -->
  <div id="messages"><%- (typeof messages === 'function') ? messages() : '' %></div>

  <!-- Inventory grid -->
  <section aria-labelledby="grid-heading" class="inventory-grid">
    <h2 id="grid-heading" class="sr-only">Vehicles</h2>
    <%- grid %>
  </section>
</main>

<%- include('../partials/footer.ejs') %>
