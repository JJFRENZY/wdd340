<%- include('../partials/head.ejs', { title }) %>
<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs', { nav }) %>

<main id="main" class="inventory classification" tabindex="-1">
  <!-- ============================= -->
  <!-- Content Heading              -->
  <!-- ============================= -->
  <% if (title) { %>
    <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>

  <!-- ============================= -->
  <!-- Message Block (future use)    -->
  <!-- ============================= -->
  <%# messages() %>

  <!-- ============================= -->
  <!-- Inventory Items Display       -->
  <!-- ============================= -->
  <section aria-labelledby="grid-heading" class="inventory-grid">
    <h2 id="grid-heading" class="sr-only">Vehicles</h2>
    <%- grid %>
  </section>
</main>

<%- include('../partials/footer.ejs') %>
