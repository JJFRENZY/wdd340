<main id="main-content">
  <!-- Hero -->
  <section class="hero" aria-labelledby="hero-heading">
    <img
      class="hero-img"
      src="/images/hero.jpg"
      alt="Showroom vehicle at CSE Motors"
      loading="eager"
      width="1600"
      height="600"
    />
    <div class="hero-text">
      <h1 id="hero-heading">CSE Motors</h1>
      <p>Quality vehicles. Transparent pricing.</p>
      <a class="btn btn-primary" href="/inventory">Shop Inventory</a>
    </div>
  </section>

  <!-- Shopping tools -->
  <section class="promo-cards" aria-labelledby="shopping-tools-heading">
    <h2 id="shopping-tools-heading" class="visually-hidden">Shopping tools</h2>
    <div class="card-grid">
      <article class="card">
        <img src="/images/new.jpg" alt="Row of brand new cars" loading="lazy" width="480" height="320" />
        <div class="card-body">
          <h3>New Vehicles</h3>
          <p>Explore the latest models.</p>
          <a class="btn btn-secondary" href="/inventory?type=new">Browse New</a>
        </div>
      </article>

      <article class="card">
        <img src="/images/used.jpg" alt="Pre-owned car lot" loading="lazy" width="480" height="320" />
        <div class="card-body">
          <h3>Used Vehicles</h3>
          <p>Reliable and inspected.</p>
          <a class="btn btn-secondary" href="/inventory?type=used">Browse Used</a>
        </div>
      </article>

      <article class="card">
        <img src="/images/service.jpg" alt="Mechanic servicing a vehicle" loading="lazy" width="480" height="320" />
        <div class="card-body">
          <h3>Service &amp; Parts</h3>
          <p>Keep your car in top shape.</p>
          <a class="btn btn-secondary" href="/service">Schedule Service</a>
        </div>
      </article>
    </div>
  </section>

  <!-- Featured vehicles -->
  <section class="featured" aria-labelledby="featured-heading">
    <h2 id="featured-heading">Featured Vehicles</h2>
    <ul class="featured-grid">
      <li class="vehicle">
        <figure>
          <img src="/images/vehicle-1.jpg" alt="Red 2021 Sedan SE" loading="lazy" width="400" height="300" />
          <figcaption>
            <h3>2021 Sedan SE</h3>
            <p class="price">$19,995</p>
          </figcaption>
        </figure>
      </li>

      <li class="vehicle">
        <figure>
          <img src="/images/vehicle-2.jpg" alt="Blue 2020 Crossover LX" loading="lazy" width="400" height="300" />
          <figcaption>
            <h3>2020 Crossover LX</h3>
            <p class="price">$22,450</p>
          </figcaption>
        </figure>
      </li>

      <li class="vehicle">
        <figure>
          <img src="/images/vehicle-3.jpg" alt="Black 2019 Truck Sport" loading="lazy" width="400" height="300" />
          <figcaption>
            <h3>2019 Truck Sport</h3>
            <p class="price">$28,900</p>
          </figcaption>
        </figure>
      </li>
    </ul>
  </section>

  <!-- Call to action -->
  <section class="cta" aria-labelledby="cta-heading">
    <h2 id="cta-heading">Ready for a test drive?</h2>
    <p>Contact our team to schedule your visit.</p>
    <a class="btn btn-primary" href="/contact">Contact Us</a>
  </section>
</main>
