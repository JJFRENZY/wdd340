<main id="main-content">
  <!-- Hero -->
  <section class="hero" aria-labelledby="hero-heading">
    <img
      class="hero-img"
      src="/images/hero.jpg"
      alt="Showroom vehicle at CSE Motors"
    />
    <div class="hero-text">
      <h1 id="hero-heading">CSE Motors</h1>
      <p>Quality vehicles. Transparent pricing.</p>
      <a class="btn btn-primary" href="/inventory">Shop Inventory</a>
    </div>
  </section>

  <!-- Shopping tools -->
  <section class="promo-cards" aria-labelledby="tools">
    <h2 id="tools" class="visually-hidden">Shopping tools</h2>
    <div class="card-grid">
      <article class="card">
        <img src="/images/new.jpg" alt="Row of new cars" />
        <div class="card-body">
          <h3>New Vehicles</h3>
          <p>Explore the latest models.</p>
          <a class="btn btn-secondary" href="/inventory?type=new">Browse New</a>
        </div>
      </article>
      <article class="card">
        <img src="/images/used.jpg" alt="Pre-owned car lot" />
        <div class="card-body">
          <h3>Used Vehicles</h3>
          <p>Reliable and inspected.</p>
          <a class="btn btn-secondary" href="/inventory?type=used">Browse Used</a>
        </div>
      </article>
      <article class="card">
        <img src="/images/service.jpg" alt="Mechanic servicing a vehicle" />
        <div class="card-body">
          <h3>Service &amp; Parts</h3>
          <p>Keep your car in top shape.</p>
          <a class="btn btn-secondary" href="/service">Schedule Service</a>
        </div>
      </article>
    </div>
  </section>
</main>
