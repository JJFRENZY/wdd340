<%- include('partials/head.ejs', { title: title || 'CSE Motors' }) %>
<%- include('partials/header.ejs') %>
<%- include('partials/nav.ejs', { nav }) %>

<main id="main" class="home" role="main" tabindex="-1">
  <!-- Hero Section -->
  <section class="hero" aria-labelledby="hero-heading">
    <div class="hero-media">
      <img
        src="/images/hero.svg"
        alt="Showroom scene with a stylized car silhouette"
        width="1600"
        height="900"
        decoding="async"
        fetchpriority="high"
      />
    </div>

    <div class="hero-copy">
      <h1 id="hero-heading">Your Next Ride Awaits</h1>

      <!-- Flash messages (from session) -->
      <div id="messages"><%- messages() %></div>

      <p>Explore our curated selection of cars, trucks, and SUVs. Transparent pricing. Friendly experts.</p>
      <a class="btn primary" href="#inventory" aria-describedby="inv-desc">Browse Inventory</a>
    </div>
  </section>

  <!-- Anchor target for "Browse Inventory" -->
  <div id="inventory" tabindex="-1" aria-describedby="inv-desc"></div>
  <p id="inv-desc" class="sr-only">Jump to the inventory section on this page.</p>

  <!-- Specials -->
  <section id="specials" class="specials" aria-labelledby="specials-heading">
    <h2 id="specials-heading">This Weekâ€™s Specials</h2>
    <ul class="card-grid" role="list">
      <li class="card">
        <img
          src="/images/specials-sedan.svg"
          alt="Sleek sedan illustration"
          width="800"
          height="600"
          loading="lazy"
          decoding="async"
        />
        <div class="card-body">
          <h3>Comfort Sedan</h3>
          <p>Fuel-efficient daily driver with advanced safety features.</p>
          <a class="btn" href="#inventory">View Details</a>
        </div>
      </li>

      <li class="card">
        <img
          src="/images/specials-suv.svg"
          alt="Spacious SUV illustration"
          width="800"
          height="600"
          loading="lazy"
          decoding="async"
        />
        <div class="card-body">
          <h3>Family SUV</h3>
          <p>Room for everyone and everything with modern tech.</p>
          <a class="btn" href="#inventory">View Details</a>
        </div>
      </li>

      <li class="card">
        <img
          src="/images/specials-truck.svg"
          alt="Capable work truck illustration"
          width="800"
          height="600"
          loading="lazy"
          decoding="async"
        />
        <div class="card-body">
          <h3>Workhorse Truck</h3>
          <p>Power, payload, and reliability for tough jobs.</p>
          <a class="btn" href="#inventory">View Details</a>
        </div>
      </li>
    </ul>
  </section>

  <!-- Value Props -->
  <section class="value-props" aria-labelledby="value-heading">
    <h2 id="value-heading">Why Choose CSE Motors?</h2>
    <ul class="prop-list" role="list">
      <li>
        <h3>Transparent Pricing</h3>
        <p>No hidden fees. Upfront, honest quotes.</p>
      </li>
      <li>
        <h3>Certified Service</h3>
        <p>Factory-trained technicians and genuine parts.</p>
      </li>
      <li>
        <h3>Financing Options</h3>
        <p>Competitive rates tailored to your needs.</p>
      </li>
    </ul>
  </section>

  <!-- Contact CTA -->
  <section id="contact" class="contact-cta" aria-labelledby="contact-heading">
    <h2 id="contact-heading">Ready for a Test Drive?</h2>
    <p>
      Call us at
      <a href="tel:+12085550123" aria-label="Call C S E Motors at (208) 555-0123">(208) 555-0123</a>
      or stop by our showroom today.
    </p>
    <a class="btn outline" href="/contact">Get Directions</a>
  </section>
</main>

<%- include('partials/footer.ejs') %>
